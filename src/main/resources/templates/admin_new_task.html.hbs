{{#> _layout.html.hbs }}

<div class="container">
    <h1>
        {{page_title}}
        {{> _profile.html.hbs }}
    </h1>

    <div>
        <form class="form-horizontal" method="post" action="/admin/tests/{{test.id}}/tasks">
            <div class="form-group">
                <div class="col-sm-12">
                    <textarea type="text" class="form-control" name="text" rows="3" placeholder="Текст" required></textarea>
                </div>
            </div>

            <div class="answers-form">
                <div class="answers-form__list">
                </div>
                <div class="answers-form__new">
                    <a href="#" class="new-answer">Добавить новый вариант ответа</a>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <label for="image" class="control-label">Изображение</label>
                    <input type="text" class="form-control" id="image" name="image" placeholder="URL"/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-success">Добавить</button>
                </div>
            </div>
        </form>
    </div>
</div>

